<h2>Quotes</h2>

{{range .quotes}}
<div class="quote">
  <div class="quote__content">
    {{ .Content }}
  </div>
</div>
{{end}}

<h2>Create a Quote</h2>
<form action="/" method="POST">
  <div class="form-group">
    <textarea class="form-control" name="content"></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="submit" class="btn btn-primary">
  </div>
</form>